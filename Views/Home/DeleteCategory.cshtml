@model FoodCatalog.Models.Categorys
@{ ViewBag.Title = "Удаление категории"; }

<div>
    <dl class="dl-horizontal">
        <dt>Категория</dt>
        <dd>
            @Html.DisplayFor(model => model.Id)
        </dd>

        <div>
            <form asp-controller="Home" asp-action="DeleteCategory" method="post">
                <div class="form-group">
                    <input type="submit" class="btn btn-default" value="Удалить" />
                </div>
            </form>
        </div> </dl>
</div>