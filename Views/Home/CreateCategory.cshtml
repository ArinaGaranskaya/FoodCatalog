@model FoodCatalog.Models.Categorys
@{ ViewBag.Title = "Добавление категории"; }
<form asp-action="CreateCategory" asp-controller="home">
    <a>Создание новой категории продуктов</a>
    <div class="form-group">
        <label asp-for="CategoryName" class="control-label">Название категории</label>
        <input type="text" asp-for="CategoryName" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Отправить" class="btn btn-default" />
    </div>
</form>
